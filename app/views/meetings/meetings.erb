<a class="button" href="/book_clubs">All book clubs</a>
<h1>All Book Discussion Meetings</h1>

<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>
<br>
<table align="center">
        <tr>
          <th>Meeting Topic</th> 
          <th>Location</th>
          <th>Book Club</th>       
        </tr>

        <% Meeting.all.each do |meeting| %>
        <tr>
          <td><a href="/meetings/<%= meeting.id %>"><%= meeting.topic %></a></td> 
          <td><%= meeting.location %></a></td>
          <td><a href="/book_clubs/<%= meeting.book_club.id %>"><%= meeting.book_club.name %></a></td>    
        </tr>
        <% end %>
        <tr>
          <td><a class="button" href="/meetings/new">New Meeting</a></td>
          <td></td>
        </tr>
        
</table>
