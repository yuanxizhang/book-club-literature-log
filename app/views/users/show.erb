<a class="button" href="/book_clubs">All book clubs</a>
<a class="button" href="/meetings">All meetings</a>
<a class="button" href="/logout">Log out</a>

<h3>user: <%= @user.username %></h3>
<h1>Literature logs by <%= @user.username %></h1>
<table align="center">
        <tr>
          <th>Logs</th>
          <th>Edit</th>
          <th>Delete</th>
        </tr>

        <% @user.logs.each do |log| %>
        <tr>
          <td><a href="/logs/<%= log.id %>"><%= log.book_title %></a></td>
          <td><a href="/logs/<%= log.id %>/edit" class="button">Edit</a></td>
          <td> 
              <form action="/logs/<%= log.id%>/delete" method="post">
                    <input type="submit" class="button" name="delete" value="Delete">
              </form>
          </td>
        </tr>
        <% end %>
        <tr>
          <td><a class="button" href="/logs/new">New log</a></td>
          <td></td>
          <td></td>
        </tr>
</table>
<br>
<h1>Meetings</h1>
<table align="center">
        <tr>
          <th>Meeting</th>
          <th>Date and Time</th>
          <th>Location</th>
        </tr>


        <% @user.meetings.each do |meeting| %>
        <tr>
          <td><a href="/meetings/<%= meeting.id %>"><%= meeting.topic %></a></td>
          <td><%= meeting.date_and_time %></td>
          <td><%= meeting.location %></td>
        </tr>
        <% end %>
        
</table>

